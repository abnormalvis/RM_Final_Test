<launch>
  <!-- 基于 sentry_gazebo/gazebo_rmuc.launch 的参数与结构调整 -->
    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="verbose" default="true"/>
    <!-- 模型车的起点放置位置 -->
    <arg name="x_pos" default="0"/>
    <arg name="y_pos" default="0"/>
    <arg name="z_pos" default="0.5"/>
    <arg name="R_pos" default="0"/>
    <arg name="P_pos" default="0"/>
    <arg name="Y_pos" default="0"/>
    <arg name="is_open_rviz" default="true"/>
    <arg name="load_chassis" default="true"/>
    <arg name="roller_type" default="realistic" doc="simple or realistic"/>
  <!-- 若系统中没有其它 joint_states 发布者，可启用以下节点发布默认 joint_states -->
  <arg name="use_joint_state_publisher" default="true"/>

    <!-- robot_description 使用 package 中的 xacro，传递必要参数 -->
  <param name="robot_description" command="$(find xacro)/xacro $(find rm_description)/urdf/sentry/sentry.urdf.xacro
     load_chassis:=$(arg load_chassis)
     use_simulation:=false roller_type:=$(arg roller_type)
"/>

    <!-- 启动 gazebo，传递参数（可指定 world_name） -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="debug" value="false" />
        <arg name="gui" value="$(arg gui)" />
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="$(arg use_sim_time)"/>
        <arg name="headless" value="false"/>
        <arg name="verbose" value="$(arg verbose)"/>
    </include>

    <!-- spawn robot in gazebo, 使用可配置的初始位姿 -->
    <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" clear_params="true"
          args="-unpause -urdf -param robot_description -model sentry -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos)" output="screen"/>

    <!-- robot_state_publisher，设置发布频率 -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
      <param name="publish_frequency" type="double" value="30.0" />
    </node>

    <!-- 当没有其它 /joint_states 发布者时，启动 joint_state_publisher 发布默认 joint_states -->
    <node if="$(arg use_joint_state_publisher)" pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher" output="screen"/>

    <!-- 静态 TF：发布 /map -> /base_link（默认零偏移），周期 1000 ms -->
    <node pkg="tf" type="static_transform_publisher" name="map2base" args="0 0 0 0 0 0 /map /base_link 1000"/>

    <!-- 可选打开 RViz -->
    <group if="$(arg is_open_rviz)">
      <node name="rviz" pkg="rviz" type="rviz" args="-d $(find sentry_chassis_controller)/rviz/sentry_with_tf.rviz" />
    </group>
</launch>